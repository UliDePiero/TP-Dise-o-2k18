@model TP0.Helpers.DispositivoEstandar

<h2>@Model.Nombre</h2>
<div class="form" style="width:500px;text-align:center;position:relative;">
    <h3 style="color: black;">Fecha de alta: @Model.FechaAlta.ToShortDateString()</h3>
    <h3 style="color: black;">KW por hora: @Model.KWxHora</h3>
    <h3 style="color: black;">Consumo del mes: @Model.ConsumoDelMes() Kw</h3>
    <h3 style="color: black;">Consumo acumulado total: @Model.Consumo() KW</h3>
</div>

@using (Html.BeginForm("DetallesEstandar", "Home", FormMethod.Post))
{
    <div class="form" style="width:15%; text-align:center;">
        <label for="HorasEstandar">Horas diarias de consumo:</label>
        <input type="number" id="HorasEstandar"
               name="HorasEstandar" value="0"
               min="0" max="24" required />
        <span class="validity"></span>
        <button type="submit" class="btn ">Guardar</button>
    </div>
}
    <hr />
<h4>
    Este dispositivo es estandar, por lo que no se pueden saber sus estados ni hacer mediciones.
</h4>
<div class="box">
    <button type="submit" class="btn">
        @Html.ActionLink("Convertir en inteligente", "ConvertirEnInteligente", new { id = Model.DispositivoID })
    </button>
</div>

<hr />
<div class="container">
    <span class="info">
        <div style="margin:10px;">
            @using (Html.BeginForm("DispositivosPropios", "Home", FormMethod.Get))
            {
                <input type="submit" class="btn" value="Volver">
            }
        </div>
    </span>
</div>
<hr />
<h4>
    <div class="container">

        @using (Html.BeginForm("BorrarDispositivoClie", "Home", new { id = Model.DispositivoID }))
        {
            <input type="submit" class="btn" value="Eliminar dispositivo" onclick="alertBox()">
        }

        <h4 class="message">ADVERTENCIA: ESTA ACCIÓN NO PUEDE DESHACERSE</h4>
    </div>
</h4>
