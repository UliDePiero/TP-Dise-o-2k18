
@if ((string)System.Web.HttpContext.Current.Session["admin"] == "true")
{
    <div class="jumbotron">
        <h2>Reportes</h2>
        <h3>Elija el tipo de Reporte a realizar</h3>
    </div>

    <div class="box">
        <table class="table">
            <tr>
                <th>
                    <h4>Por Hogar</h4>
                </th>
                <td>
                    <h5>Genera un reporte sobre el consumo de un Hogar especifico en un periodo seleccionado</h5>
                </td>
                <td>
                    @Html.ActionLink("Generar Reporte por Hogar", "ReporteHogar", FormMethod.Get)
                </td>
            </tr>
            <tr>
                <th>
