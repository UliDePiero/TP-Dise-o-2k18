@model TP0.Helpers.Static.DispositivoEstatico

<div class="jumbotron">
    <h2>Editar Dispositivo</h2>
</div>

<table class="table">
    <tr>
        <th>
            @Html.Label("Nombre")
        </th>
        <th style="text-align: center;">

            @Html.Label("EsInteligente")
        </th>
        <th style="text-align: center;">
            @Html.Label("Codigo")
        </th>
        <th style="text-align: center;">
            @Html.Label("Min")
        </th>
        <th style="text-align: center;">
            @Html.Label("Max")
        </th>
        <th style="text-align: center;">
            @Html.Label("kWxHora")
        </th>
    </tr>

    @using (Html.BeginForm("GuardarCambioDispositivoAdmin/" + Model.DispositivoID, "Home", FormMethod.Post))
    {
        <tr>
            <td>
                @Html.EditorFor(model => model.Nombre)
            </td>
            <td style="text-align: center;">
                @Html.CheckBoxFor(model => model.EsInteligente, new { onclick = "return false"})
            </td>
            <td style="text-align: center;">
                @Html.EditorFor(model => model.Codigo)
            </td>
            <td style="text-align: center;">
                @Html.EditorFor(model => model.Min)
            </td>
            <td style="text-align: center;">
                @Html.EditorFor(model => model.Max)
            </td>
            <td style="text-align: center;">
                @Html.EditorFor(model => model.kWxHora)
            </td>
            <td>
                <button type="submit">
                    Guardar
                </button>
            </td>
        </tr>
    }
</table>
<div>@Html.ActionLink("Volver","AdministrarDispositivosAdmin")</div>