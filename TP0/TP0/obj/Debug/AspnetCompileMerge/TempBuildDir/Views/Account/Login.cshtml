@using TP0.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}


<div class="jumbotron">
    <h2>@ViewBag.Title</h2>
    <h4>Use una cuenta local para iniciar sesión</h4>
</div>

<div class="login-page">

    <div>
        @Html.ValidationSummary(true, "", new { @class = "message" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "message" })

    </div>
    <div class="form">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div>
                @Html.AntiForgeryToken()

                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="checkbox" style="font-size:14px">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <div style="margin:23px;">
                <button>Iniciar sesión</button>
            </div>

            <div style="margin:23px;">
                <p>@Html.ActionLink("Registrar como nuevo usuario", "Register")</p>
            </div>


        }
    </div>
</div>

